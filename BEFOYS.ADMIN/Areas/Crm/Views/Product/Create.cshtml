@model BEFOYS.DataLayer.Model.TblProduct
@using BEFOYS.DataLayer.Model
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Brands = ViewBag.Brands as List<SelectListItem>;
}

<h1>Create</h1>

<h4>TblProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductBrandsId" class="control-label"></label>
                <select asp-for="ProductBrandsId" class="form-control" asp-items="Brands"></select>
                <span asp-validation-for="ProductBrandsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div id="category" class="form-group">

            </div>
            
           <div id="customfields">

           </div>
            <div class="form-group">
                برچسب ها
                <input name="tags" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {

            loadcategories();
            loadcustomfields();
    });
    function loadcategories(id,elem) {

    $.ajax({
            url: "@Url.Content("~/Crm/ProductCategory/GetCategory")",
            data: {
                id: id
            },
            method: "GET"

            }).done(function (Result) {
                    console.log(Result);
                    if (Result.options.length != 0) {
                        CreateCategories(Result,elem);
                    }
                });

    }


    function CreateCategories(ss,elem) {

        for (var i = ($(elem).index()); i <= $("select[name=ProductPcid]").last().index(); i++) {
        
            $("select[name=ProductPcid][index=" + i + "]").remove();
        
        }
        
        var categoryIndex = $("select[name=ProductPcid]").last().index();
        
        var category = $("<select></select>").attr({ "name": "ProductPcid", "index": (categoryIndex), "isMain": (categoryIndex == -1 ? true : false),"onchange": "loadcategories(this.value,this)"  }).addClass("form-control").append($("<option></option>").text("لطفا انتخاب نمایید").val(0));
        
        $.each(ss.options, function (key, value) {
        
            category.append($("<option></option>").val(value.pcId).text(value.pcName));
        
        });
        
        $("#category").append(category);
        }
        function loadcustomfields(item) {
                $.ajax({
            url: "@Url.Content("~/Crm/ProductFeatureGroup/GetGroupFields")",
            data: {
                CategoryId: 4
            },
            method: "GET"

                }).done(function (Result) {
                    $("#customfields").html(Result);
                });

    }
       
    </script>
}
