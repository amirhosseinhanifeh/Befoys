<div class="main-section-body">


    <div class="" style="width:100%;height:auto">


        <div>

            <table id="DateTable" dir="rtl" class="table table-striped " style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">
                            نام برند
                        </th>
                        <th scope="col">
                            تایید
                        </th>
                        <th scope="col">
                            مرجع برند
                        </th>
                        @*<th scope="col">
                            لوگو
                        </th>*@
                        <th scope="col" data-orderable="false">کنترل</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandsName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandsIsVerify)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandsCountryReference.CountryName)
                            </td>
                            @*<td>
                               
                                @Html.DisplayFor(modelItem => item.BrandsLogoDocumentId)
                            </td>*@
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.BrandsId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>






</div>

@Html.Partial("_Modal")

@section Scripts{

    <script src="~/lib/jquery-datatables/datatables.js"></script>
    <script src="~/lib/jquery-datatables/DataTables-1.10.20/js/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $('#DateTable').DataTable({
                language: {

                    "sEmptyTable": "هیچ داده ای در جدول وجود ندارد",
                    "sInfo": "نمایش _START_ تا _END_ از _TOTAL_ رکورد",
                    "sInfoEmpty": "نمایش 0 تا 0 از 0 رکورد",
                    "sInfoFiltered": "(فیلتر شده از _MAX_ رکورد)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ",",
                    "sLengthMenu": "_MENU_",
                    "sLoadingRecords": "در حال بارگزاری...",
                    "sProcessing": "در حال پردازش...",
                    "sSearch": "",
                    "sSearchPlaceholder": "جستجو",
                    "sZeroRecords": "رکوردی با این مشخصات پیدا نشد",
                    "oPaginate": {
                        "sFirst": "ابتدا",
                        "sLast": "انتها",
                        "sNext": "بعدی",
                        "sPrevious": "قبلی"
                    },
                    "oAria": {
                        "sSortAscending": ": فعال سازی نمایش به صورت صعودی",
                        "sSortDescending": ": فعال سازی نمایش به صورت نزولی"
                    }
                },

                scrollX: true,
                scrollCollapse: true,
            });
        });
    </script>

    <script>
      
        function Create() {
            $.ajax({
                url: "@Url.Content("~/Crm/Brand/Create")",
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#myModal').modal('show');
                $('#myModalLabel').html('افزودن برند');
                $('#myModalBody').html(result);
            });
        }
    </script>

}