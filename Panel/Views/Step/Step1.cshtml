@model Panel.Controllers.Step1

@{
    ViewData["Title"] = "Step1";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

    <form method="post" enctype="multipart/form-data">

        <label>نام</label>
        <input class="form-control" name="FirstName" value="" />
        <br />
        <label>نام خانوادگی</label>
        <input class="form-control" name="LastName" value="" />
        <br />
        <label>ایمیل</label>
        <input hidden class="form-control" name="infoes[0].TypeCodeId" value="2" />
        <input class="form-control" name="infoes[0].Value" value="" type="email" />

        <br />
        <label>رمزعبور</label>
        <input hidden class="form-control" name="infoes[1].TypeCodeId" value="2" />
        <input class="form-control" name="infoes[1].Value" value="" type="password" />

        <br />
        <label>تکرار رمز عبور</label>
        <input hidden class="form-control" name="infoes[2].TypeCodeId" value="2" />
        <input class="form-control" name="infoes[2].Value" value="" type="password" />

        <h4>اطلاعات شخصی</h4>
        <br />
        <label>کد ملی</label>

        <input class="form-control" name="NationalCode" value="" />

        <br />
        <label>روز</label>
        <select class="form-control" name="Day">
            <option value="01">01</option>
        </select>
        <br />
        <label>ماه</label>>
        <select class="form-control" name="Month">
            <option value="1">فروردین</option>
        </select>

        <br />
        <label>سال</label>
        <select class="form-control" name="Year">
            <option value="1398">1398</option>
        </select>
        <br />
        <label>جنسیت</label>
        <select class="form-control" name="Gender">
            <option value="1">مرد</option>
            <option value="2">زن</option>
        </select>
        <br />
        <button class="btn btn-success" type="submit">ورود</button>
    </form>
